@model ClienteMVC.ViewModels.TipoEnderecoViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Tipos de Endereço</h2>

<div id="Form"> <!-- Criar a div de Form -->
    <div class="editor-label">
        <b>Pesquisar:</b>
    </div>
    <div class="editor-field">
        @Html.Editor("q")
    </div>

    <p><input type="button" value="Novo" onclick="editar(0);" /></p>
</div>

<div id="Lista">
    @Html.Partial("List", Model.tiposEndereco)
</div>

<div id="Dados"></div>

<script>

    function carregarTabela(q) {
        $.ajax({
            type: "GET",
            dataType: "html",
            url: "TipoEndereco/List",
            data: { q: q },
            success: function (data) {
                $("#Lista").html(data);
                $("#Form").show();
                $("#Lista").show();
                $("#Dados").hide();
            }
        });
    }

    function editar(id) {
        $.ajax({
            type: "GET",
            dataType: "html",
            url: "TipoEndereco/Edit",
            data: { id: id },
            success: function (data) {
                $("#Dados").html(data);
                $("#Form").hide();
                $("#Lista").hide();
                $("#Dados").show();
            }
        });
    }

    $("#q").keyup(function () {
        carregarTabela($("#q").val());
    });

</script>