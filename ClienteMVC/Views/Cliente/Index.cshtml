@model IEnumerable<ClienteMVC.Entity.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Gerenciamento de Clientes</h2>

<p>
    @Html.ActionLink("Novo", "Edit", new { id = 0 })
</p>
<table>
    <tr>
        <th>
            Nome
        </th>
        <th>
            E-mail
        </th>
        <th>
            CPF
        </th>
        <th>
            Data de Nascimento
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPF)
        </td>
        <td>
            @item.DataNascimento.ToShortDateString()
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdCliente }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.IdCliente })
        </td>
    </tr>
}

</table>
